{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.fire.manager": {
			"initial_state": "default",
			"states": {
				"default": {
					"on_entry": [
						"/execute @s ~~~ detect ~~~ air -1 setblock ~~~ fire"
					],
					"transitions": [
						{
							"undoused": "query.variant==1"
						}
					]
				},
				"undoused": {
					"on_entry": [
						"/execute @s ~~~ detect ~~~ fire -1 setblock ~~~ air"
					],
					"transitions": [
						{
							"default": "query.variant==0"
						}
					]
				}
			}
		}
	}
}