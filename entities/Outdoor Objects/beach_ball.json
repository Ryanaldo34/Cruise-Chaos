{
    "format_version": "1.17.40",
    "minecraft:entity": {
        "description": {
            "identifier": "cc:beach_ball",
            "is_experimental": false,
            "is_spawnable": true,
            "is_summonable": true,
            "animations": {
                "remove": "controller.animation.removal",
                "placement": "controller.animation.placement"
              },
              "scripts": {
                "animate": [
                  "remove",
                  "placement"
                ]
              }
        },
        "component_groups": {
            "being_removed": {
                "minecraft:variant": {
                    "value": 1
                }
            },
            "cool": {
                "minecraft:mark_variant": {
                    "value": 0
                }
            },
            "hot": {
                "minecraft:mark_variant": {
                    "value": 1
                }
            },
            "rainbow": {
                "minecraft:mark_variant": {
                    "value": 2
                }
            },
            "triadic": {
                "minecraft:mark_variant": {
                    "value": 3
                }
            }
        },
        "components": {
            "minecraft:type_family": {
                "family": [
                    "furniture"
                ]
            },
            "minecraft:physics": {},
            "minecraft:collision_box": {
                "height": 3,
                "width": 1
            },
            "minecraft:breathable": {
                "total_supply": 2,
                "suffocate_time": 0,
                "inhale_time": 10
                },
                "minecraft:damage_sensor": {
                    "triggers": [
                        {
                            "cause": "entity_attack",
                            "deals_damage": false
                        },
                        {
                            "cause": "fire",
                            "deals_damage": false
                        },
                        {
                            "cause": "projectile",
                            "deals_damage": false
                        }
                    ]
                },
            "minecraft:interact": {
                "interactions": [
                    {
                        "swing": true,
                        "add_items": {
                            "table": "loot_tables/furniture.json"
                        },
                        "use_item": false,
                        "interact_text": "action.interact.remove_furniture",
                        "on_interact": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "has_equipment",
                                        "subject": "other",
                                        "domain": "hand",
                                        "operator": "equals",
                                        "value": "flint"
                                    }
                                ]
                            },
                            "event": "cc:remove_furniture",
                            "target": "self"
                        }
                    },
                    {
                        "swing": true,
                        "use_item": false,
                        "interact_text": "action.interact.paint",
                        "on_interact": {
                            "filters": {
                                "test": "has_equipment",
                                "subject": "other",
                                "domain": "hand",
                                "operator": "equals",
                                "value": "stick"
                            },
                            "event": "cc:paint_furniture",
                            "target": "self"
                        }
                    }
                ]
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": true
            },
            "minecraft:is_stackable": {},
            "minecraft:push_through": {
                "value": 1
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "cool"
                    ]
                }
            },
            "cc:remove_furniture": {
                "add": {
                    "component_groups": [
                        "being_removed"
                    ]
                }
            },
            "cc:paint_furniture": {
                "sequence": [
                    {
                        "filters": {
                            "test": "is_mark_variant",
                            "operator": "equals",
                            "value": 3
                        },
                        "remove": {
                            "component_groups": [
                                "triadic"
                            ]
                        },
                        "add": {
                            "component_groups": [
                                "cool"
                            ]
                        }
                    },
                    {
                        "filters": {
                            "test": "is_mark_variant",
                            "operator": "equals",
                            "value": 2
                        },
                        "remove": {
                            "component_groups": [
                                "rainbow"
                            ]
                        },
                        "add": {
                            "component_groups": [
                                "triadic"
                            ]
                        }
                    },
                    {
                        "filters": {
                            "test": "is_mark_variant",
                            "operator": "equals",
                            "value": 1
                        },
                        "remove": {
                            "component_groups": [
                                "hot"
                            ]
                        },
                        "add": {
                            "component_groups": [
                                "rainbow"
                            ]
                        }
                    },
                    {
                        "filters": {
                            "test": "is_mark_variant",
                            "operator": "equals",
                            "value": 0
                        },
                        "remove": {
                            "component_groups": [
                                "cool"
                            ]
                        },
                        "add": {
                            "component_groups": [
                                "hot"
                            ]
                        }
                    }
                ]
            }
        }
    }
}